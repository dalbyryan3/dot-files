" Turn on relative line numbering
set relativenumber
" Turn on incremental search
set incsearch
" Case insensitive searches 
set ignorecase
" Search will be case sensitive if it contains an uppercase letter
set smartcase
" Set line numbers
set number
" Set tabs as spaces initially, sleuth will adjust based on file
set tabstop=4 shiftwidth=4 softtabstop=4 expandtab
" Allow backpace of previously inserted characters
set backspace=indent,eol,start
" Visual Studio command bindings
nmap gcc :vsc Edit.ToggleLineComment<CR>
vmap gc :vsc Edit.ToggleLineComment<CR>
nmap gD :vsc Edit.FindAllReferences<CR>
nmap gd :vsc Edit.GoToDefinition<CR>
nmap gl :vsc Edit.PeekDefinition<CR>
nmap gz :vsc Refactor.Rename<CR>
nmap <C-o> :vsc View.NavigateBackward<CR>
nmap <C-i> :vsc View.NavigateForward<CR>
nmap gsr :vsc Build.RebuildSolution<CR>
nmap gsb :vsc Build.BuildSolution<CR>
nmap gsc :vsc Build.CleanSolution<CR>
nmap gS :vsc Debug.Start<CR>
nmap gC :vsc Team.Git.CompareWithUnmodified<CR>
